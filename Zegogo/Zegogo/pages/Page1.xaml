                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Frame Grid.Column="0" Grid.Row="0" BackgroundColor="#D86241" CornerRadius="5" Padding="0" HasShadow="False">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_9" NumberOfTapsRequired="1"></TapGestureRecognizer>
                            </Frame.GestureRecognizers>
                            <StackLayout Spacing="0" Padding="10">
                                <Image Source="camera" HeightRequest="25" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Image>
                            </StackLayout>
                        </Frame>
                        <Frame x:Name="frame1" Grid.Column="1" Grid.Row="0" Padding="0" BackgroundColor="#FFD5C9" CornerRadius="5" HasShadow="False">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_8" NumberOfTapsRequired="1"></TapGestureRecognizer>
                            </Frame.GestureRecognizers>
                            <AbsoluteLayout>
                                <Frame AbsoluteLayout.LayoutBounds=".1,.1,22,22" AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="White" CornerRadius="5" HasShadow="False" Padding="0">
                                    <Label Text="2" TextColor="#8D8D8D" Padding="0" Margin="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double" iOS="16" Android="16"/>
                                        </Label.FontSize>
                                    </Label>
                                </Frame>
                            </AbsoluteLayout>
                        </Frame>
                        <Frame x:Name="frame2" Grid.Column="2" Grid.Row="0" Padding="0" BackgroundColor="#FFD5C9" CornerRadius="5" HasShadow="False">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_8" NumberOfTapsRequired="1"></TapGestureRecognizer>
                            </Frame.GestureRecognizers>
