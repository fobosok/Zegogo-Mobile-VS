                            </Grid.ColumnDefinitions>
                            <Button x:Name="b1" Grid.Column="0" Text="Цена" TextColor="White" FontFamily="Circe-Regular.ttf#Circe-Regular" BackgroundColor="#D86241" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Clicked="b1_Clicked">
                                <Button.FontSize>
                                    <OnPlatform x:TypeArguments="x:Double" iOS="14" Android="16"/>
                                </Button.FontSize>
                            </Button>
                            <BoxView Grid.Column="1" BackgroundColor="#D7D7D7"></BoxView>
                            <Button x:Name="b2" Grid.Column="2" Text="Бесплатно" TextColor="#D86241" FontSize="Subtitle" FontFamily="Circe-Regular.ttf#Circe-Regular" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Clicked="b2_Clicked">
                                <Button.FontSize>
                                    <OnPlatform x:TypeArguments="x:Double" iOS="14" Android="16"/>
                                </Button.FontSize>
                            </Button>
                            <BoxView Grid.Column="3" BackgroundColor="#D7D7D7"></BoxView>
                            <Button x:Name="b3" Grid.Column="4" Text="Обмен" TextColor="#D86241" FontFamily="Circe-Regular.ttf#Circe-Regular" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Clicked="b3_Clicked">
                                <Button.FontSize>
                                    <OnPlatform x:TypeArguments="x:Double" iOS="14" Android="16"/>
                                </Button.FontSize>
                            </Button>
                        </Grid>
                    </border:SfBorder>
                    <Grid x:Name="gridPrice" Margin="40,5,5,5" Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <border:SfBorder Grid.Column="0" BorderColor="#D7D7D7" BorderWidth="1" CornerRadius="10">
                            <StackLayout Orientation="Horizontal" Padding="0">
                                <zegogo:CustomEntry x:Name="priceEntry" Keyboard="Numeric" FontSize="Subtitle" VerticalOptions="CenterAndExpand" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" Margin="10,0,10,0">

                                </zegogo:CustomEntry>
                                <Image Source="euro" WidthRequest="13" HeightRequest="13" HorizontalOptions="End" Margin="0,0,15,0"></Image>
                            </StackLayout>
                        </border:SfBorder>
                        <button:SfCheckBox Grid.Column="1" x:Name="checkBox" FontSize="14" Text="Договорная" TextColor="#8D8D8D" UncheckedColor="LightGray" TickColor="#8D8D8D" Margin="10,0,0,0" Padding="0,0,0,0"/>
                    </Grid>
                    <BoxView x:Name="p3" HeightRequest="1" BackgroundColor="#D7D7D7" Margin="0,10,0,0"></BoxView>
                    <StackLayout Padding="0" Margin="0">
                        <Frame HeightRequest="45" Margin="0" Padding="25,0,25,0" HasShadow="False">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_3" NumberOfTapsRequired="1"></TapGestureRecognizer>
                            </Frame.GestureRecognizers>
                            <StackLayout Orientation="Horizontal">
                                <Image x:Name="opRomb" HeightRequest="12" WidthRequest="12" Source="rombS"></Image>
