             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:zegogo="clr-namespace:Zegogo"
             mc:Ignorable="d"
             IconImageSource="tab3"
             BackgroundColor="#FFFFFF"
             x:Class="Zegogo.pages.Page1">
    <ContentPage.Content>
        <StackLayout Padding="0" Margin="0">
            <Frame HasShadow="False" BackgroundColor="#BE593D" Padding="0" Margin="0" CornerRadius="0">
                <Frame.HeightRequest>
                    <OnPlatform x:TypeArguments="x:Double" iOS="60" Android="50"></OnPlatform>
                </Frame.HeightRequest>
                <Label Text="Мой профиль" FontFamily="Circe-Regular.ttf#Circe-Regular" TextColor="#FFFFFF" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label.Padding>
                        <OnPlatform x:TypeArguments="Thickness" iOS="0,30,0,0"></OnPlatform>
                    </Label.Padding>
                    <Label.FontSize>
                        <OnPlatform x:TypeArguments="x:Double" iOS="18" Android="18"/>
                    </Label.FontSize>
                </Label>
            </Frame>
            <ScrollView>
                <StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="25,20,25,5">
                        <Image  HeightRequest="12" WidthRequest="12" Source="rombS"></Image>
                        <Label Text="Добавить фото" TextColor="Black" FontFamily="Circe-Regular.ttf#Circe-Regular" FontSize="Subtitle">

                        </Label>
                    </StackLayout>
                    <Grid x:Name="gridPhoto" Padding="25,10,25,0" RowSpacing="11" ColumnSpacing="11">
